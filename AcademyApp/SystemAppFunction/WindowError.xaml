<Window x:Class="AcademyApp.SystemAppFunction.WindowError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcademyApp.SystemAppFunction"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Окно уведомления" Height="200" Width="350">
    <Grid>
        <TextBlock
            Name="TxtEvent"
            MaxHeight="150"
            MaxWidth="200"
            TextAlignment="Center"
            VerticalAlignment="Center"
            Style="{StaticResource TxtStyleDefault}"
            Text="Тут будет ошибка"/>
        <Button 
            Name="BtnCloseWindow"
            Click="BtnCloseWindow_Click"
            VerticalAlignment="Bottom"
            FontWeight="Bold"
            Content="ОК"
            Style="{StaticResource BtnStyleAccept}"/>
    </Grid>
</Window>
