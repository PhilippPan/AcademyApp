<Page x:Class="AcademyApp.MVC.PageMvc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AcademyApp.MVC"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="PageMvc">

    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Проверка логина:"/>
            <TextBox Name="TxbLogin"
                     Style="{StaticResource TxbStyleDefault}"
                     />
            <Button Name="BtnQuery"
                    Click="BtnQuery_Click"
                    Style="{StaticResource BtnStyleAccept}"
                    Content="Проверка"/>
        </StackPanel>
    </Grid>
</Page>
